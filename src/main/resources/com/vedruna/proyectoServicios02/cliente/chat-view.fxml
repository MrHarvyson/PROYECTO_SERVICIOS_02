<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="5.0" style="-fx-background-color: linear-gradient(to top, white, lightskyblue)" vgap="5.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vedruna.proyectoServicios02.cliente.ChatController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="5.0" prefHeight="5.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="150.0" prefHeight="100.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="5.0" prefHeight="5.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <Label fx:id="labelNick" alignment="CENTER" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="118.0" textAlignment="RIGHT" GridPane.columnIndex="1" GridPane.halignment="RIGHT" />
        <TextArea fx:id="areaMostrador" editable="false" prefHeight="300.0" prefWidth="300.0" GridPane.columnSpan="2" GridPane.rowIndex="1" />
        <TextField fx:id="areaEscritor" GridPane.columnSpan="2" GridPane.rowIndex="2" />
        <Button fx:id="botonEnviar" onAction="#enviar" text="Enviar" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />

    </children>
    <padding>
        <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
    </padding>
</GridPane>
